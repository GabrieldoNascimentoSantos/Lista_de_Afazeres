<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragments.CadSubTarefaFragment">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_titulo_tarefa"
        android:padding="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_subtarefa"
        android:padding="4dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="@string/subtarefa"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editSubTarefa"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:enabled="false"
        android:text="@string/digite"/>

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/img_cam"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/camera">
    </ImageView>

</LinearLayout>